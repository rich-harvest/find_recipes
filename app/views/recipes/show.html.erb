<div class="recipe-card" style="max-width: 800px; margin: 0 auto;">
  <h1><%= @recipe.title %></h1>
  
  <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin: 20px 0;">
    <img src="<%= @recipe.image %>" alt="<%= @recipe.title %>" style="width: 100%; height: auto; border-radius: 8px;" />
    
    <div class="recipe-details">
      <p><strong>Prep time:</strong> <%= @recipe.prep_time %> minutes</p>
      <p><strong>Cook time:</strong> <%= @recipe.cook_time %> minutes</p>
      <p><strong>Total time:</strong> <%= @recipe.prep_time + @recipe.cook_time %> minutes</p>
      <p><strong>Rating:</strong> <%= @recipe.ratings %> ‚≠ê</p>
      <% if @recipe.cuisine.present? %>
        <p><strong>Cuisine:</strong> <%= @recipe.cuisine %></p>
      <% end %>
      <% if @recipe.category.present? %>
        <p><strong>Category:</strong> <%= @recipe.category %></p>
      <% end %>
      <% if @recipe.author.present? %>
        <p><strong>Author:</strong> <%= @recipe.author %></p>
      <% end %>
    </div>
  </div>

  <div style="margin-top: 20px;">
    <h2>Ingredients</h2>
    <ul style="list-style-type: none; padding: 0;">
      <% @recipe.ingredients.each do |ingredient| %>
        <li style="padding: 8px 0; border-bottom: 1px solid #eee;">
          <%= ingredient %>
        </li>
      <% end %>
    </ul>
  </div>

  <div style="margin-top: 20px;">
    <%= link_to "Back to recipes", recipes_path, style: "display: inline-block; padding: 10px 20px; background: #4CAF50; color: white; text-decoration: none; border-radius: 4px;" %>
  </div>
</div>